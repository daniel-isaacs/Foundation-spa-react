{
    "compileOnSave": false,
    "files": ["./src/index.tsx","./server/server.tsx"],
    "compilerOptions": {
        "baseUrl": "./src/",
        "jsx": "react",
        //"diagnostics": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "noImplicitAny": true,
        "outDir": "./build/",
        "removeComments": true,
        "skipLibCheck": true,
        "target": "ES6",
        "paths": {
            "app/*": [ "../src/*" ],
            "app.server/*": [ "../server/*" ],
            "app.express/*": [ "../express/*" ],
            "EPiServer.ContentApi.Forms/*": [ "../../Foundation/Scripts/EPiServer.ContentApi.Forms/*" ]
        },
        "moduleResolution": "node"
    },
    "include": [
        "./src",
        "./server"
    ]
}