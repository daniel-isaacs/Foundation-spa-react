{
    "compileOnSave": true,
    "files": ["./src/index.tsx","./server/server.tsx"],
    "compilerOptions": {
        "baseUrl": "./src/",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "ES2020",
        "noImplicitAny": true,
        "outDir": "./build/",
        "removeComments": false,
        "importHelpers": true,
        "allowUmdGlobalAccess": false,
        "skipLibCheck": true,
        "target": "ES2020",
        "paths": {
            "app/*": [ "../src/*" ],
            "app.server/*": [ "../server/*" ]
        },
        "moduleResolution": "node",
        "lib": ["DOM","DOM.Iterable","ES6"],
        "downlevelIteration": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src",
        "./server"
    ],
    "exclude": [
        "./node_modules"
    ]
}